<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForthActivity">

    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request_permission_with_start_activity"
        android:text="request_permission_with_start_activity"
        tools:text="request_permission_with_start_activity"/>

    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_permission_with_start_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request_permission_with_start_fragment"
        android:text="request_permission_with_start_fragment"
        tools:text="request_permission_with_start_fragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>