<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="横竖屏切换"
        android:layout_alignTop="@+id/jump_land"
        android:id="@+id/changeOrientation"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jump_land"
        android:text="跳转横屏"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <com.ljz.plat.android.CustomView
        android:id="@+id/customView"
        android:layout_above="@+id/jump_land"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="@dimen/dp_100"
        style="@style/CardView"
        android:theme="@style/CardView"
        app:circle_color="@color/colorPrimary"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jump_LinerLayout"
        android:text="跳转LinerLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_dialog"
        android:text="Show Dialog"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/jump_LinerLayout"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_normal_dialog"
        android:text="Show Normal Dialog"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/show_dialog"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request_httpData"
        android:text="Request httpData"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/show_normal_dialog"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jump_ForthActivity"
        android:text="jump_ForthActivity"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/request_httpData"/>

</RelativeLayout>