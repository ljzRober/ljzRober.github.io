<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentContainer"
    tools:context=".fragment.MyFragmentActivity">

  <fragment
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/inflate_fragment"
      android:name="com.ljz.plat.android.fragment.InflateFragment"/>

  <Button
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="获取fragment个数"
      android:id="@+id/getFragment_count"/>

  <Button
      app:layout_constraintTop_toBottomOf="@id/getFragment_count"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="addFragment"
      android:id="@+id/addFragment"/>

  <Button
      app:layout_constraintTop_toBottomOf="@id/addFragment"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="addFragment2"
      android:id="@+id/addFragment2"/>

  </androidx.constraintlayout.widget.ConstraintLayout>